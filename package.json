{
  "name": "bcw",
  "version": "0.0.1",
  "description": "A project for Binance chain wallet",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "lerna run watch --parallel",
    "bootstrap": "yarn install && lerna link",
    "build": "lerna run build --stream",
    "test": "lerna run --stream test -- --color"
  },
  "license": "MIT",
  "devDependencies": {
    "@binancechain/commitlint-config": "^0.0.4",
    "@binancechain/prettier-config": "^0.0.4",
    "@commitlint/cli": "^12.1.1",
    "conventional-changelog": "^3.1.24",
    "husky": "4.3.8",
    "lerna": "^4.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@binance-chain/javascript-sdk": "^4.1.1",
    "bip39": "^3.0.3",
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^5.1.0",
    "web3": "^1.3.5"
  },
  "prettier": "@binancechain/prettier-config",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@binancechain/commitlint-config/lerna"
    ]
  }
}
